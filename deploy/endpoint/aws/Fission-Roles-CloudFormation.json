{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "ApiGatewayName": {
      "Type": "String",
      "Default": "Fission-API"
    }
  },
  "Resources": {
    "FissionPolicySQSEditor": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "CustomerManaged-Fission.SQSEditor",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sqs:ChangeMessage*",
                "sqs:GetQueue*",
                "sqs:*Message",
                "sqs:*MessageBatch"
              ],
              "Resource": [
                "*"
              ]
            }
          ]
        },
        "Roles": [
          {
            "Ref": "FissionRoleLambdaUpdate"
          },
          {
            "Ref": "FissionRoleScheduler"
          }
        ]
      }
    },
    "FissionPolicyDynamoDBEditor": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "CustomerManaged-Fission.DynamoDBEditor",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:*Table",
                "dynamodb:*Item",
                "dynamodb:Get*",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:DescribeStream",
                "dynamodb:Put*",
                "dynamodb:List*"
              ],
              "Resource": [
                "*"
              ]
            }
          ]
        },
        "Roles": [
          {
            "Ref": "FissionRoleLambdaUpdate"
          },
          {
            "Ref": "FissionRoleScheduler"
          },
          {
            "Ref": "FissionRoleCallbackTrigger"
          },
          {
            "Ref": "FissionRoleReclaimer"
          },
          {
            "Ref": "FissionRoleReaper"
          }
        ]
      }
    },
    "FissionPolicyLambdaLauncher": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "CustomerManaged-Fission.LambdaLauncher",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": "lambda:InvokeFunction",
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "FissionRoleScheduler"
          }
        ]
      }
    },
    "FissionPolicyKinesis": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "CustomerManaged-Fission.Kinesis",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "kinesis:DescribeStream",
                "kinesis:GetRecords",
                "kinesis:GetShardIterator",
                "kinesis:ListStreams",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "FissionRoleScheduler"
          }
        ]
      }
    },
    "FissionRoleLambdaUpdate": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.UnifiedEndpoint.app"
      }
    },
    "FissionRoleScheduler": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.Scheduler.app"
      }
    },
    "FissionRoleCallbackTrigger": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.Callback.trigger"
      }
    },
    "FissionRoleReclaimer": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.Reclaimer.app"
      }
    },
    "FissionRoleRetry": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.Retry.app"
      }
    },
    "FissionRoleReaper": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.Reaper.app"
      }
    },
    "FissionRoleAuthorizer": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "RoleName": "Fission.authorizer",
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaVPCAccessExecutionRole"
        ]
      }
    }
  }
}