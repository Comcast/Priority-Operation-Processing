    <dependencies>
        <dependency>
            <groupId>com.comcast.fission.module</groupId>
            <artifactId>fission-json-helper</artifactId>
            <version>${json-helper.version}</version>
        </dependency>
        <dependency>
            <groupId>com.comcast.fission.endpoint</groupId>
