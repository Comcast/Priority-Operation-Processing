<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.theplatform.dfh.build</groupId>
        <artifactId>pl-dfh-build-parent</artifactId>
        <version>1.0.7</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.theplatform.dfh.cp.agenda.reclaim</groupId>
    <artifactId>pl-dfh-cp-agenda-reclaimer-aws</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Agenda Reclaimer AWS compatible zip package suitable for Lambda</name>

    <properties>
        <aws-java-jdk>1.11.100</aws-java-jdk>
        <aws-lambda-jdk.version>1.11.100</aws-lambda-jdk.version>
        <aws-lambda-java-core.version>1.2.0</aws-lambda-java-core.version>
        <agenda-reclaimer.version>1.0.0</agenda-reclaimer.version>
        <dfh-module-version-info.version>1.0.0</dfh-module-version-info.version>
        <dfh-aws-base-endpoint.version>1.0.0</dfh-aws-base-endpoint.version>
        <idm-http.version>1.0.1</idm-http.version>
        <commons-http-client.version>3.1</commons-http-client.version>
        <cp-api.version>1.0.2</cp-api.version>
        <data-object-reaper-aws.version>1.0.0</data-object-reaper-aws.version>
        <jackson.version>2.10.2</jackson.version>
    </properties>

    <dependencies>
        <!-- DFH Dependencies -->
        <dependency>
            <groupId>com.theplatform.dfh.cp.reaper</groupId>
            <artifactId>pl-dfh-cp-data-object-reaper-aws</artifactId>
            <version>${data-object-reaper-aws.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.agenda.reclaim</groupId>
            <artifactId>pl-dfh-cp-agenda-reclaimer-impl</artifactId>
            <version>${agenda-reclaimer.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.version</groupId>
            <artifactId>pl-dfh-module-version-info</artifactId>
            <version>${dfh-module-version-info.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.http</groupId>
            <artifactId>pl-dfh-http-idm</artifactId>
            <version>${idm-http.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-base-aws</artifactId>
            <version>${dfh-aws-base-endpoint.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>${commons-http-client.version}</version>
        </dependency>

        <!-- Provided dependencies from intermediate modules -->
        <dependency>
            <groupId>com.theplatform.dfh.cp.api</groupId>
            <artifactId>pl-dfh-cp-api</artifactId>
            <version>${cp-api.version}</version>
        </dependency>

        <!-- AWS Dependencies -->
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-core</artifactId>
            <version>${aws-java-jdk}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-lambda-java-core</artifactId>
            <version>${aws-lambda-java-core.version}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-lambda</artifactId>
            <version>${aws-lambda-jdk.version}</version>
        </dependency>

        <!-- External provided dependencies (intentionally last so they override any nested dependencies) -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!--  Note: Normally, this plugin would be run using
                "mvn compile assembly:single" but the execution
                clause below binds it to the normal 'package' lifecycle phase
                -->
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/lambda_deployment_package_assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>lambda_deployment_package_execution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.theplatform.plugins</groupId>
                <artifactId>buildproperty-plugin</artifactId>
                <configuration>
                    <service>true</service>
                </configuration>
                <executions>
                    <execution>
                        <id>buildprops</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>plbuild-properties</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
