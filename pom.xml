<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.theplatform.dfh.build</groupId>
        <artifactId>pl-dfh-build-parent</artifactId>
        <version>1.0.6</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.theplatform.dfh.cp.endpoint</groupId>
    <artifactId>pl-dfh-cp-endpoint-impl-aws</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Endpoint AWS Impl compatible zip package suitable for Lambda</name>

    <properties>
        <aws.java.jdk>1.11.451</aws.java.jdk>
        <aws.lambda.version>1.1.0</aws.lambda.version>
        <dfh-persistence-aws-dynamodb.version>1.0.2-SNAPSHOT</dfh-persistence-aws-dynamodb.version>
        <dfh-module-queue-aws-sqs.version>1.0.2</dfh-module-queue-aws-sqs.version>
        <dfh-module-version-info.version>1.0.0</dfh-module-version-info.version>
        <endpoint-base-aws.version>1.0.2-SNAPSHOT</endpoint-base-aws.version>
        <dfh-http-idm.version>1.0.1</dfh-http-idm.version>
        <endpoint-impl.version>1.0.0</endpoint-impl.version>
        <endpoint-api.version>1.0.2</endpoint-api.version>
        <cp-api.version>1.0.2</cp-api.version>
        <dfh-http-idm.version>1.0.1</dfh-http-idm.version>
        <jackson.version>2.9.8</jackson.version>
    </properties>

    <dependencies>
        <!-- Endpoint implementation modules -->
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-impl</artifactId>
            <version>${endpoint-impl.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-api</artifactId>
            <version>${endpoint-api.version}</version>
        </dependency>

        <!-- AWS Dependencies -->
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-core</artifactId>
            <version>${aws.java.jdk}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-lambda-java-core</artifactId>
            <version>${aws.lambda.version}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-lambda</artifactId>
            <version>${aws.java.jdk}</version>
        </dependency>

        <!-- DFH Dependencies -->
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-base-aws</artifactId>
            <version>${endpoint-base-aws.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.http</groupId>
            <artifactId>pl-dfh-http-idm</artifactId>
            <version>${dfh-http-idm.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.persistence</groupId>
            <artifactId>pl-dfh-persistence-impl-dynamodb</artifactId>
            <version>${dfh-persistence-aws-dynamodb.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.queue</groupId>
            <artifactId>pl-dfh-modules-queue-aws-sqs-impl</artifactId>
            <version>${dfh-module-queue-aws-sqs.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.version</groupId>
            <artifactId>pl-dfh-module-version-info</artifactId>
            <version>${dfh-module-version-info.version}</version>
        </dependency>

        <!-- Provided dependencies from intermediate modules -->
        <dependency>
            <groupId>com.theplatform.dfh.cp.api</groupId>
            <artifactId>pl-dfh-cp-api</artifactId>
            <version>${cp-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!--  Note: Normally, this plugin would be run using
                "mvn compile assembly:single" but the execution
                clause below binds it to the normal 'package' lifecycle phase
                -->
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/lambda_deployment_package_assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>lambda_deployment_package_execution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.theplatform.plugins</groupId>
                <artifactId>buildproperty-plugin</artifactId>
                <configuration>
                    <service>true</service>
                </configuration>
                <executions>
                    <execution>
                        <id>buildprops</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>plbuild-properties</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
