        <dependency>
            <groupId>com.theplatform.dfh.cp</groupId>
            <artifactId>pl-dfh-monitor-bananas</artifactId>
            <version>${dfh-monitor-bananas.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
