    <groupId>com.theplatform.dfh.cp.endpoint</groupId>
    <artifactId>pl-dfh-cp-endpoint-impl</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Endpoint implementation</name>

    <properties>
        <dfh-persistence-api.version>1.0.0-SNAPSHOT</dfh-persistence-api.version>
        <endpoint-base.version>1.0.0-SNAPSHOT</endpoint-base.version>
        <cp-scheduling-api.version>1.0.0-SNAPSHOT</cp-scheduling-api.version>
        <cp-json-helper.version>1.0.0-SNAPSHOT</cp-json-helper.version>
        <cp-insight-mapper.version>1.0.0-SNAPSHOT</cp-insight-mapper.version>
        <dfh-http-util.version>1.0.0-SNAPSHOT</dfh-http-util.version>
        <mediainfo-handler-api.version>1.0.0-SNAPSHOT</mediainfo-handler-api.version>
        <accelerate-filter-handler-api.version>1.0.0-SNAPSHOT</accelerate-filter-handler-api.version>
        <ldap-filter.version>1.0.0-SNAPSHOT</ldap-filter.version>
        <http-request-handler-api.version>1.0.0-SNAPSHOT</http-request-handler-api.version>
        <commons-http-client.version>3.1</commons-http-client.version>
        <endpoint-api.version>1.0.0-SNAPSHOT</endpoint-api.version>
        <dfh-queue-api.version>1.0.0-SNAPSHOT</dfh-queue-api.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-base</artifactId>
            <version>${endpoint-base.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.persistence</groupId>
            <artifactId>pl-dfh-persistence-api</artifactId>
            <version>${dfh-persistence-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-api</artifactId>
            <version>${endpoint-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.queue</groupId>
            <artifactId>pl-dfh-modules-queue-api</artifactId>
            <version>${dfh-queue-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.scheduling.api</groupId>
            <artifactId>pl-dfh-cp-scheduling-api</artifactId>
            <version>${cp-scheduling-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.scheduling</groupId>
            <artifactId>pl-dfh-cp-scheduling-insight-mapper-impl</artifactId>
            <version>${cp-insight-mapper.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp</groupId>
            <artifactId>pl-dfh-cp-json-helper</artifactId>
            <version>${cp-json-helper.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.http</groupId>
            <artifactId>pl-dfh-http-util</artifactId>
            <version>${dfh-http-util.version}</version>
