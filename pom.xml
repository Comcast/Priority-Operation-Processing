<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.theplatform.dfh.build</groupId>
        <artifactId>pl-dfh-build-parent</artifactId>
        <version>1.0.6</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.theplatform.dfh.cp.endpoint</groupId>
    <artifactId>pl-dfh-cp-endpoint-base-aws</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Base AWS Endpoint</name>

    <properties>
        <aws.java.jdk>1.11.100</aws.java.jdk>
        <aws.lambda.version>1.1.0</aws.lambda.version>
        <cp-api.version>1.0.1-SNAPSHOT</cp-api.version>
        <endpoint-agenda.version>1.0.0-SNAPSHOT</endpoint-agenda.version>
        <dfh-persistence-aws-dynamodb.version>1.0.1-SNAPSHOT</dfh-persistence-aws-dynamodb.version>
        <dfh-module-version-info.version>1.0.0-SNAPSHOT</dfh-module-version-info.version>
        <cp-endpoint-base.version>1.0.0-SNAPSHOT</cp-endpoint-base.version>
        <cp-endpoint-api.version>1.0.2-SNAPSHOT</cp-endpoint-api.version>
        <commons-text.version>1.4</commons-text.version>
        <apache.commons.collections4>4.1</apache.commons.collections4>
        <apache.commons.beanutils>1.9.3</apache.commons.beanutils>
        <commons-io.version>2.6</commons-io.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>${apache.commons.beanutils}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
            <version>${apache.commons.collections4}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
            <version>${commons-text.version}</version>
        </dependency>

        <!-- AWS Dependencies -->
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-core</artifactId>
            <version>${aws.java.jdk}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-lambda-java-core</artifactId>
            <version>${aws.lambda.version}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-lambda</artifactId>
            <version>${aws.java.jdk}</version>
        </dependency>

        <!-- DFH Dependencies -->
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-base</artifactId>
            <version>${cp-endpoint-base.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.endpoint</groupId>
            <artifactId>pl-dfh-cp-endpoint-api</artifactId>
            <version>${cp-endpoint-api.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.modules.persistence</groupId>
            <artifactId>pl-dfh-persistence-impl-dynamodb</artifactId>
            <version>${dfh-persistence-aws-dynamodb.version}</version>
        </dependency>

        <dependency>
            <groupId>com.theplatform.dfh.cp.api</groupId>
            <artifactId>pl-dfh-cp-api</artifactId>
            <version>${cp-api.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.theplatform.dfh.modules.version</groupId>
            <artifactId>pl-dfh-module-version-info</artifactId>
            <version>${dfh-module-version-info.version}</version>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>${commons-io.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
