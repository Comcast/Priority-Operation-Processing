    <groupId>com.theplatform.dfh.cp.handler</groupId>
    <artifactId>pl-dfh-cp-handler-kubernetes-support</artifactId>
    <version>1.0.2-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Content Processing Handler Kubernetes</name>

    <properties>
        <dfh-fabric8-kube-client.version>1.0.2</dfh-fabric8-kube-client.version>
        <handler-base.version>1.0.3-SNAPSHOT</handler-base.version>
        <dfh-monitor.version>1.0.0</dfh-monitor.version>
        <dfh-monitor-graphite.version>1.0.0</dfh-monitor-graphite.version>
        <dfh-monitor-bananas.version>1.0.0</dfh-monitor-bananas.version>
        <dfh-compression.version>1.0.0</dfh-compression.version>
        <cp-api.version>1.0.2</cp-api.version>
        <jackson.version>2.10.0</jackson.version>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>com.theplatform.dfh.modules.compression</groupId>
            <artifactId>pl-dfh-compression</artifactId>
            <version>${dfh-compression.version}</version>
        </dependency>
        <dependency>
            <groupId>com.theplatform.dfh.cp.api</groupId>
            <artifactId>pl-dfh-cp-api</artifactId>
            <version>${cp-api.version}</version>
