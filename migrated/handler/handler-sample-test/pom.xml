<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.theplatform.dfh.build</groupId>
        <artifactId>pl-dfh-build-parent</artifactId>
        <version>1.0.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.theplatform.dfh.cp.endpoint</groupId>
    <artifactId>pl-dfh-cp-handler-sample-test-functional</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Sample Handler Functional Tests</name>

    <properties>
        <spring-version>3.0.7.RELEASE</spring-version>
        <json-helper.version>1.0.0-SNAPSHOT</json-helper.version>
        <dfh-fabric8-kube-client.version>1.0.0-SNAPSHOT</dfh-fabric8-kube-client.version>
        <sample-api.version>1.0.0-SNAPSHOT</sample-api.version>
        <kubernetes-reporter.version>1.0.0-SNAPSHOT</kubernetes-reporter.version>


        <skipITTests>true</skipITTests>
        <test-suite>testng.xml</test-suite>
        <surefireReportDir>surefire-reports</surefireReportDir>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.theplatform.dfh.cp.handler</groupId>
            <artifactId>pl-dfh-cp-handler-reporter-kubernetes</artifactId>
            <version>${kubernetes-reporter.version}</version>
        </dependency>

        <dependency>
            <groupId>com.theplatform.dfh.cp.handler</groupId>
            <artifactId>pl-dfh-cp-handler-sample-api</artifactId>
            <version>${sample-api.version}</version>
        </dependency>

        <dependency>
            <groupId>com.theplatform.dfh.cp</groupId>
            <artifactId>pl-dfh-cp-json-helper</artifactId>
            <version>${json-helper.version}</version>
        </dependency>

        <dependency>
            <groupId>com.theplatform.dfh.cp</groupId>
            <artifactId>pl-dfh-kube-client-fabric8</artifactId>
            <version>${dfh-fabric8-kube-client.version}</version>
        </dependency>

        <!-- 3rd party -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>

        <!-- spring -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${spring-version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
            <version>${spring-version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring-version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <version>${spring-version}</version>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>${testng.version}</version>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <!-- prevent surefire from running integration tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>true</skipTests>
                    <includes>
                        <include>**/unit/**</include>
                    </includes>
                </configuration>
            </plugin>

            <!-- Integration Test Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.16</version>
                <configuration>
                    <forkCount>1</forkCount>
                    <!-- By default we skip IT tests -->
                    <skipTests>${skipITTests}</skipTests>
                    <suiteXmlFiles>
                        <suiteXmlFile>${test-suite}</suiteXmlFile>
                    </suiteXmlFiles>
                    <includes>
                        <include>**/*Test*.*</include>
                    </includes>

                    <testSourceDirectory>${basedir}/src/test/groovy</testSourceDirectory>
                    <redirectTestOutputToFile>false</redirectTestOutputToFile>
                    <reportsDirectory>${basedir}/target/${surefireReportDir}</reportsDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <!--suppress MavenModelInspection -->
                            <goal>integration-test</goal>
                            <!--suppress MavenModelInspection -->
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
