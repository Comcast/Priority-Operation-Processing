<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.comcast.fission.handler</groupId>
        <artifactId>fission-handler-sample-parent</artifactId>
        <version>1.0.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.comcast.fission.handler</groupId>
    <artifactId>fission-handler-sample-impl</artifactId>
    <version>1.0.2</version>
    <packaging>jar</packaging>
    <name>Content Processing Handler Sample</name>

    <properties>
        <fission-api.version>1.0.3</fission-api.version>
        <sample-handler-api.version>1.0.1</sample-handler-api.version>
        <logging-extension.version>1.2.0</logging-extension.version>
        <jackson.version>2.9.8</jackson.version>

        <handler-base.version>1.0.3</handler-base.version>
        <dfh-fabric8-kube-client.version>1.0.2</dfh-fabric8-kube-client.version>
        <handler-kubernetes-support.version>1.0.2</handler-kubernetes-support.version>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>com.comcast.fission.handler</groupId>
            <artifactId>fission-handler-sample-api</artifactId>
            <version>${sample-handler-api.version}</version>
        </dependency>

        <dependency>
            <groupId>com.comcast.fission.handler</groupId>
            <artifactId>fission-handler-kubernetes-support</artifactId>
            <version>${handler-kubernetes-support.version}</version>
        </dependency>

        <!-- Provided dependencies from intermediate modules -->
        <dependency>
            <groupId>com.comcast.fission.handler</groupId>
            <artifactId>fission-handler-base</artifactId>
            <version>${handler-base.version}</version>
        </dependency>
        <dependency>
            <groupId>com.comcast.fission.module</groupId>
            <artifactId>pl-dfh-kube-client-fabric8</artifactId>
            <version>${dfh-fabric8-kube-client.version}</version>
        </dependency>

        <dependency>
            <groupId>com.comcast.fission.api</groupId>
            <artifactId>fission-api</artifactId>
            <version>${fission-api.version}</version>
        </dependency>

        <!-- External provided dependencies (intentionally last so they override any nested dependencies) -->
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-yaml</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>com.theplatform.modules</groupId>
            <artifactId>pl-logging-extension-logback</artifactId>
            <version>${logging-extension.version}</version>
        </dependency>

        <dependency>
            <groupId>com.cts.modules</groupId>
            <artifactId>millis-syslog-appender</artifactId>
            <version>0.1.1</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>animal-sniffer-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>check_jdk_compatibility</id>
                        <phase>none</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/spring.handlers</resource>
                                </transformer>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/spring.schemas</resource>
                                </transformer>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <manifestEntries>
                                        <Main-Class>com.comcast.fission.handler.sample.impl.HandlerEntryPoint</Main-Class>
                                        <Build-Number>1</Build-Number>
                                    </manifestEntries>
                                </transformer>
                            </transformers>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
    <reporting>

    </reporting>
</project>
