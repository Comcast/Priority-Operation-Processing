<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.comcast.fission</groupId>
        <artifactId>fission-root</artifactId>
        <version>1.0.7</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.comcast.fission.reaper</groupId>
    <artifactId>fission-data-object-reaper-aws</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Data object reaper AWS compatible zip package suitable for Lambda</name>

    <properties>
        <aws-java-jdk>1.11.100</aws-java-jdk>
        <aws-lambda-jdk.version>1.11.100</aws-lambda-jdk.version>
        <aws-lambda-java-core.version>1.2.0</aws-lambda-java-core.version>
        <fission-module-version-info.version>1.0.0</fission-module-version-info.version>
        <fission-aws-base-endpoint.version>1.0.2-SNAPSHOT</fission-aws-base-endpoint.version>
        <fission-api.version>1.0.2</fission-api.version>
        <fission-producer-consumer-util>1.0.1</fission-producer-consumer-util>
        <fission-dynamodb.version>1.0.1</fission-dynamodb.version>
        <jackson.version>2.10.2</jackson.version>
    </properties>

    <dependencies>
        <!-- DFH Dependencies -->
        <dependency>
            <groupId>com.comcast.fission</groupId>
            <artifactId>fission-producer-consumer-util</artifactId>
            <version>${fission-producer-consumer-util}</version>
        </dependency>
        <dependency>
            <groupId>com.comcast.fission.modules.version</groupId>
            <artifactId>module-version-info</artifactId>
            <version>${fission-module-version-info.version}</version>
        </dependency>
        <dependency>
            <groupId>com.comcast.fission.endpoint</groupId>
            <artifactId>fission-endpoint-base-aws</artifactId>
            <version>${fission-aws-base-endpoint.version}</version>
        </dependency>
        <dependency>
            <groupId>com.comcast.fission.api</groupId>
            <artifactId>fission-api</artifactId>
            <version>${fission-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.comcast.fission.modules.persistence</groupId>
            <artifactId>fission-persistence-impl-dynamodb</artifactId>
            <version>${fission-dynamodb.version}</version>
        </dependency>

        <!-- AWS Dependencies -->
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-core</artifactId>
            <version>${aws-java-jdk}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-lambda-java-core</artifactId>
            <version>${aws-lambda-java-core.version}</version>
        </dependency>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-lambda</artifactId>
            <version>${aws-lambda-jdk.version}</version>
        </dependency>

        <!-- External provided dependencies (intentionally last so they override any nested dependencies) -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!--  Note: Normally, this plugin would be run using
                "mvn compile assembly:single" but the execution
                clause below binds it to the normal 'package' lifecycle phase
                -->
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/lambda_deployment_package_assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>lambda_deployment_package_execution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
